---
// library import 
import { Image } from "astro:assets";

// utils imports
import { slugify, formatDate } from "../js/utils"

const {category, title, author, date, image} = Astro.props;

---

<header>
    <div class="container" >
        <small>
            <a href={`/category/${slugify(category)}/`}
            class="badge">{category}</a>
        </small>
        <small>
            <h1 class="h2">{title}</h1>
            <p> by <a href={`/author/${slugify(author)}/`}>{author}</a>
            - {formatDate(date)}</p>
        </small>
    </div>
    <Image 
        src={image.src} 
        alt={image.alt}
        width={1200}
        height={600}
        format="avif"
        quality= {80}
        class="hero-image"
        />
</header>